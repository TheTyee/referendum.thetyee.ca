<!-- Modal -->
<div class="modal fade" id="modalDetail" tabindex="-1" role="dialog" aria-labelledby="councillorName" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="councillorName"><%= fullname %>, <%= municipality %></h4>
      </div>
      <div class="modal-body">
          <h5 id="detail-position">Position: <%= position %></h5>
          <% if ( quote ) { %>
            <blockquote>
                <i class="fa fa-quote-left fa-3x pull-left fa-border"></i><p><%= quote %><small><%= fullname %>, <%= municipality %></small></p>
            </blockquote>
          <% } %>
            <a class="btn_google" target="_blank" href="https://plus.google.com/share?hl=en&url=http://transit-vote.thetyee.ca/" title="Share on Google Plus"><img src="/ui/img/google-24x24.png" /></a>
            <a class="btn_facebook" target="_blank" href="http://www.facebook.com/sharer/sharer.php?t=Transit%20Vote%3A%20Which%20leaders%20say%20%22Yes%2C%22%20which%20say%20%22No%3F%22%20%20We%20asked%20them.%20All%20142%20of%20them.&u=http://transit-vote.thetyee.ca/" title="Share on Facebook"><img src="/ui/img/facebook-24x24.png" /></a>
            <a class="btn_twitter" target="_blank" href="http://twitter.com/share?text=Transit%20Vote%3A%20Which%20leaders%20say%20%22Yes%2C%22%20which%20say%20%22No%3F%22%20%20We%20asked%20them.%20All%20142%20of%20them.%20%23transitreferendum&url=http://transit-vote.thetyee.ca/" title="Share on Twitter"><img src="/ui/img/twitter-24x24.png" /></a>
            <br /><br />
          <% if ( website_city ) { %>
          <p id="detail-web-city"><a href="<%= website_city %>"><%= fullname %>'s page on the <%= municipality %> website.</a></p>
          <% } %>
          <% if ( website_personal ) { %>
          <p id="detail-web-personal"><a href="<%= website_personal %>"<%= fullname %> personal website </a></p>
          <% } %>
          <p id="email"><i class="fa fa-envelope"></i> <a href="mailto:<%= email %>"><%= email %></a></p>
          <p id="phone"><i class="fa fa-phone"></i> <%= phone %></p>
          <p id="twitter"><i class="fa fa-twitter"></i> <a href="https://twitter.com/<%= twitter %>"><%= twitter %></a></p>
          <p id="linkedin"><i class="fa fa-linkedin"></i> <a href="<%= linkedin %>"><%= linkedin %></a></p>
          <p id="facebook"><i class="fa fa-facebook"></i> <a href="<%= facebook %>"><%= facebook %></a></p>
          <br />
          <p class="info-missing">Information missing? <a href="mailto:editor@thetyee.ca?subject=Update for <%= fullname %>">Send us a note with the details</a>.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
